{{!-- pages/learn.handlebars --}}
<main class="container">
    <div id="wrapper">
        <h1>Review Responder</h1>
        <main class="container">
            <section class="row text-center placeholders">
                <div class="col-9 col-sm-9 placeholder">
                    <h4 class="text-left">Reviews</h4>
                    <div id="reviews">            

                    </div>
                </div>
                <div class="col-3 col-sm-3">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Average Review Ratings</h4>
                            <div id="avg-rating">Not Complete</div>
                        </div>
                        <div class="stats" >
                            <i class="fa fa-chevron-up d-inline"></i>

                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!-- Modal - Sell Confirmation-->
        <div class="modal fade" id="modal-response-confirm" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content text-center">
                    <h3>Response Saved</h3>
                    <i class="fa fa-check fa-4x text-success"></i>
                </div>
            </div>
        </div>
        <!-- Sell Failure Modal -->
        <div class="modal fade" id="modal-response-fail" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content text-center">
                    <h3>Error</h3>
                    <i class="fa fa-times fa-4x text-danger"></i>
                    <p> Response not saved</p>
                </div>
            </div>
        </div>
        <!-- Full Height Modal Right -->
        <div class="modal fade right" id="modal-response" tabindex="-1" role="dialog" aria-labelledby="Buy Modal" aria-hidden="true" data-backdrop="false">
            <div class="modal-dialog modal-full-height modal-right" role="document">
                <!--Content-->
                <div class="modal-content">
                    <!--Header-->
                    <div class="modal-header">
                        <p class="heading lead">Write A Response</p>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="white-text">&times;</span>
                            <p></p>
                        </button>
                    </div>
                    <!--Body-->
                    <div class="modal-body">
                        <p>Write a draft response to the review below</p>
                        <div id="draft-response">
                            <h3 id="review-title">Loading...</h3>
                        </div>
                        <form>
                            <div class="form-group">
                                <label for="response-text">Your Response:</label>
                                <textarea class="form-control" id="response-text" value="100"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="your-name">Your Name</label>
                                <input type="text" class="form-control" id="your-name" value="10" name="your-name">
                            </div>
                            <div class="form-group">
                                <label for="your-position">Your Position</label>
                                <input type="text" class="form-control" id="your-position" value="10" name="your-position">
                            </div>
                            <div class="modal-footer justify-content-center">
                                <button type="button" class="btn-fill btn-wd btn btn-primary" id="save-response">Save Draft Response<i class="fa fa-comments ml-1"></i></button>
                            </div>
                        </form>
                        <!--Footer-->
                    </div>
                    <!--/.Content-->
                </div>
            </div>
        </div>
    </div>
</main>